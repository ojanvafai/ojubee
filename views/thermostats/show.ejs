<!DOCTYPE html>
<html>
  <head>
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <link rel='stylesheet' href='/css/base.css' />
    <style>
      img {
        opacity: 1;
        transition: opacity 0.5s;
        width: 50px;
        margin: 10px;
        float: right;
      }
      .hidden {
        opacity: 0;
      }
      .button-container {
        display: flex;
        position: relative;
      }
      .button-container > button {
        flex: 1;
        margin: 5px;
        padding: 20px 0;
        font-size: 40px;
        border: 1px solid;
        background: white;
      }
      .temp {
        display: flex;
        align-items: center;
        justify-content: center;
        position: absolute;
        top: 0;
        right: 0;
        bottom: 0;
        left: 0;
        font-size: 40px;
        font-weight: bold;
        opacity: 0.5;
        pointer-events: none;
      }
      .heat {
        color: red
      }
      .cool {
        color: blue
      }
    </style>

    <script>
      var pendingRequest;

      function handleUpdateTemperatureComplete() {
        // TODO: Verify the data returned matches the local state of the page.
        spinner.classList.add('hidden');
      }

      function handleUpdateTemperatureError() {
        handleUpdateTemperatureComplete();
        alert('Update failed. Reload the page to be safe.');
      }

      function encodedValue(id) {
        // TODO: url encode if needed in future
        return id + '=' + document.getElementById(id).value;
      }

      function updateTemp(id, delta) {
        if (pendingRequest)
          pendingRequest.abort();

        spinner.classList.remove('hidden');

        var input = document.getElementById(id);
        var newValue = parseInt(input.value, 10) + delta;
        input.value = newValue;
        document.getElementById(id + 'Span').textContent = newValue;

        var data = encodedValue('desiredHeat') + '&' + encodedValue('desiredCool');

        pendingRequest = new XMLHttpRequest();
        pendingRequest.addEventListener('load', handleUpdateTemperatureComplete);
        pendingRequest.addEventListener('error', handleUpdateTemperatureError);
        pendingRequest.open("POST", "/thermostats/<%= thermostatId %>/sethold");
        pendingRequest.setRequestHeader('Content-Type','application/x-www-form-urlencoded')
        pendingRequest.send(data);
      }
    </script>
  </head>

  <body>
    <div class="nav">
      <a href="/thermostats">Thermostats</a>
      <% for(var i = 0; i < thermostats.length; i++) { %>
        <a href="/thermostats/<%= thermostats[i].thermostatId %>"><%= thermostats[i].name  %></a>
      <% } %>
    </div>

    <img id="spinner" class="hidden" src="/img/spinner.gif">
    <h1><%= thermostat.name ? thermostat.name : thermostat.identifier %></h1>
		<div>
      <div>Current: <%= currentTemp %>&#186; F</div>
      <div>Mode: <%= hvacMode %></div>

      <form method="POST" action="/thermostats/<%= thermostatId %>/resume">
        <button type="submit" <%= !isHold ? 'disabled' : ''%> data-loading-text="Loading...">resume</button>
      </form>
    </div>

    <input id="desiredHeat" name="desiredHeat" type="hidden" value="<%= desiredHeat %>" />
    <input id="desiredCool" name="desiredCool" type="hidden"  value="<%= desiredCool %>" />

    <div class="button-container">
      <div class="heat temp"><span id="desiredHeatSpan"><%= desiredHeat %></span>&#186; F</div>
      <button onclick="updateTemp('desiredHeat', -1)">-</button>
      <button onclick="updateTemp('desiredHeat', 1)">+</button>
    </div>

    <div class="button-container">
      <div class="cool temp"><span id="desiredCoolSpan"><%= desiredCool %></span>&#186; F</div>
      <button onclick="updateTemp('desiredCool', -1)">-</button>
      <button onclick="updateTemp('desiredCool', 1)">+</button>
    </div>
  </body>
</html>
